<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KitaBantu.ProfilePage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image Source="undraw_profile_pic.png" WidthRequest="150" HeightRequest="150" HorizontalOptions="Center" VerticalOptions="Center"></Image>
            <Label x:Name="email" HorizontalOptions="Center"/>
            <BoxView HeightRequest="50"/>
            <Label Padding="3,0,0,0" Text="Username"/>
            <Entry x:Name="username" IsEnabled="False"/>
            <BoxView HeightRequest="5"/>
            <Label Padding="3,0,0,0" Text="Phone Number"/>
            <Entry x:Name="phoneNumber" IsEnabled="False"/>
            <BoxView HeightRequest="30"/>
            <Button BackgroundColor="#FFA000" TextColor="White" Text="Edit Profile" x:Name="editProfileButton" IsEnabled="False" Clicked="editProfileButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>